@model IEnumerable<Proyecto_1__CRUD.Models.ClienteReporteSinMantenimiento>

@{
    ViewData["Title"] = "Clientes sin Mantenimiento";
}

<div class="container">
    <h1 class="mb-4">Clientes sin Mantenimiento en los Últimos 2 Meses</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID Cliente</th>
                    <th>Nombre</th>
                    <th>ID Mantenimiento</th>
                    <th>Fecha Agendada</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.ClienteId</td>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.MantenimientoId</td>
                            <td>@cliente.FechaAgendado.ToShortDateString()</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No se encontraron clientes sin mantenimiento.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
