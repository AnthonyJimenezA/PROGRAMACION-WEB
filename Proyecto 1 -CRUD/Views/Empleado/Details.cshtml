@model Proyecto_1__CRUD.Models.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<h1 class="mb-4">Detalles del Empleado</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Model.Cedula
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cedula)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NombreCompleto)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaNacimiento.ToShortDateString())
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Lateralidad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Lateralidad)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaIngreso.ToShortDateString())
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.SalarioPorHora)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SalarioPorHora)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-cedula="@Model.Cedula" class="btn btn-primary me-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
