@model IEnumerable<Proyecto_1__CRUD.Models.Mantenimiento>

@{
    ViewData["Title"] = "Mantenimiento";
}

<h1 class="card-title mb-4">Mantenimiento</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-3 col-md" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-3 d-flex justify-content-between">
    <div class="col-3">
        <form method="get" asp-action="Index" id="searchForm">
            <div class="input-group">
                <input type="text" name="searchTerm" id="searchInput" class="form-control form-control-sm" placeholder="Buscar por ID de Mantenimiento" />
                <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
            </div>
        </form>
    </div>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID de Mantenimiento</th>
                <th>ID del Cliente</th>
                <th>Fecha Ejecutada</th>
                <th>Fecha Agendada</th>
                <th>Cantidad de m² de la Propiedad</th>
                <th>Cantidad de m² de Cerca Viva</th>
                <th>Días sin Chapia</th>
                <th>Fecha Siguiente Chapia</th>
                <th>Tipo de Zacate</th>
                <th>Producto Aplicado</th>
                <th>Producto</th>
                <th>Costo de Chapia por m²</th>
                <th>Costo de Aplicación de Producto por m²</th>
                <th>IVA (%)</th>
                <th>Estado del Mantenimiento</th>
                <th>Costo Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdMantenimiento)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdCliente)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaEjecutado.ToString("d"))</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaAgendado.ToString("d"))</td>
                    <td>@Html.DisplayFor(modelItem => item.M2Propiedad)</td>
                    <td>@Html.DisplayFor(modelItem => item.M2CercaViva)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiasSinChapia)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaSiguienteChapia.ToString("d"))</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoZacate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductoAplicado ? "Sí" : "No")</td>
                    <td>@Html.DisplayFor(modelItem => item.Producto)</td>
                    <td>@Html.DisplayFor(modelItem => item.CostoChapiaPorM2)</td>
                    <td>@Html.DisplayFor(modelItem => item.CostoAplicacionProductoPorM2)</td>
                    <td>@Html.DisplayFor(modelItem => item.IVA)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.CostoTotal)</td>
                    <td class="flex-cell">
                        <a href="@Url.Action("Edit", new { idMantenimiento = item.IdMantenimiento })" class="icon-action" title="Editar">
                            <i class="fas fa-edit fa-lg"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { idMantenimiento = item.IdMantenimiento })" class="icon-action-delete" title="Eliminar">
                            <i class="fas fa-trash-alt fa-lg"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
